{
  "name": "be-skillforge",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "run-p build:*",
    "build:main": "nest build",
    "build:ai": "nest build ai_service",
    "build:common": "nest build common-config",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:dev": "run-p start:dev:*",
    "start:dev:app": "nest start be-skillforge --watch",
    "start:dev:ai": "nest start ai_service --watch",
    "start:prod": "run-p start:prod:*",
    "start:prod:app": "node dist/apps/be-skillforge/main",
    "start:prod:ai": "node dist/apps/ai_service/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/be-skillforge/test/jest-e2e.json",
    "test:ai-e2e": "jest --config ./apps/ai_service/test/jest-e2e.json",
    "prisma:skillforge:generate": "prisma generate --schema=apps/be-skillforge/prisma/schema/base.prisma",
    "prisma:ai:generate": "prisma generate --schema=apps/ai_service/prisma/schema/base.prisma",
    "prisma:generate-all": "pnpm run prisma:skillforge:generate && pnpm run prisma:ai:generate",
    "db:deploy:skillforge": "prisma migrate deploy --schema=apps/be-skillforge/prisma/schema",
    "db:deploy:ai": "prisma migrate deploy --schema=apps/ai_service/prisma/schema",
    "db:deploy-all": "pnpm run db:deploy:skillforge && pnpm run db:deploy:ai",
    "db:migrate:skillforge": "prisma migrate dev --schema=apps/be-skillforge/prisma/schema",
    "db:migrate:ai": "prisma migrate dev --schema=apps/ai_service/prisma/schema",
    "db:status:skillforge": "prisma migrate status --schema=apps/be-skillforge/prisma/schema",
    "db:status:ai": "prisma migrate status --schema=apps/ai_service/prisma/schema"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/microservices": "^11.1.8",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.18.0",
    "amqp-connection-manager": "^5.0.0",
    "amqplib": "^0.10.9",
    "joi": "^18.0.1",
    "prisma": "^6.18.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/joi": "^17.2.3",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common-config(|/.*)$": "<rootDir>/libs/common-config/src/$1"
    }
  }
}
