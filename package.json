{
  "name": "be-skillforge",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "run-p build:*",
    "build:app": "nest build be-skillforge",
    "build:ai": "nest build ai_service",
    "build:libs": "nest build common-config && nest build redis && nest build common",
    "start": "nest start",
    "start:dev": "run-p start:dev:*",
    "start:dev:app": "nest start be-skillforge --watch",
    "start:dev:ai": "nest start ai_service --watch",
    "start:debug": "run-p start:debug:*",
    "start:debug:app": "nest start be-skillforge --debug --watch",
    "start:debug:ai": "nest start ai_service --debug --watch",
    "start:prod": "run-p start:prod:*",
    "start:prod:app": "node dist/apps/be-skillforge/main",
    "start:prod:ai": "node dist/apps/ai_service/main",
    "prisma:generate": "pnpm run prisma:generate:ai && pnpm run prisma:generate:app",
    "prisma:generate:ai": "prisma generate --schema=apps/ai_service/prisma/schema/base.prisma",
    "prisma:generate:app": "prisma generate --schema=apps/be-skillforge/prisma/schema/base.prisma",
    "db:migrate": "pnpm run db:migrate:ai && pnpm run db:migrate:app",
    "db:migrate:ai": "prisma migrate dev --schema=apps/ai_service/prisma/schema/base.prisma",
    "db:migrate:app": "prisma migrate dev --schema=apps/be-skillforge/prisma/schema/base.prisma",
    "db:deploy": "pnpm run db:deploy:ai && pnpm run db:deploy:app",
    "db:deploy:ai": "prisma migrate deploy --schema=apps/ai_service/prisma/schema/base.prisma",
    "db:deploy:app": "prisma migrate deploy --schema=apps/be-skillforge/prisma/schema/base.prisma",
    "db:status": "pnpm run db:status:ai && pnpm run db:status:app",
    "db:status:ai": "prisma migrate status --schema=apps/ai_service/prisma/schema/base.prisma",
    "db:status:app": "prisma migrate status --schema=apps/be-skillforge/prisma/schema/base.prisma",
    "prisma:studio": "pnpm run prisma:studio:ai && pnpm run prisma:studio:app",
    "prisma:studio:ai": "prisma studio --schema=apps/ai_service/prisma/schema/base.prisma",
    "prisma:studio:app": "prisma studio --schema=apps/be-skillforge/prisma/schema/base.prisma",
    "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "run-p test:e2e:*",
    "test:e2e:app": "jest --config ./apps/be-skillforge/test/jest-e2e.json",
    "test:e2e:ai": "jest --config ./apps/ai_service/test/jest-e2e.json",
    "docker:up": "docker compose -f docker-compose.yaml up -d",
    "docker:down": "docker compose -f docker-compose.yaml down -v",
    "docker:logs": "docker compose -f docker-compose.yaml logs -f"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/microservices": "^11.1.8",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.18.0",
    "amqp-connection-manager": "^5.0.0",
    "amqplib": "^0.10.9",
    "cache-manager": "^7.2.4",
    "cache-manager-ioredis": "^2.1.0",
    "ioredis": "^5.8.2",
    "joi": "^18.0.1",
    "prisma": "^6.18.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/cache-manager-ioredis": "^2.0.8",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/joi": "^17.2.3",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.spec.ts",
      "!**/*.e2e-spec.ts",
      "!**/main.ts",
      "!**/*.module.ts",
      "!**/index.ts",
      "!**/config.schema.ts",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/common-config(|/.*)$": "<rootDir>/libs/common-config/src/$1",
      "^@app/redis(|/.*)$": "<rootDir>/libs/redis/src/$1",
      "^@data-access/ai-client(|/.*)$": "<rootDir>/node_modules/.prisma/ai-client/$1",
      "^@data-access/skillforge-client(|/.*)$": "<rootDir>/node_modules/.prisma/skillforge-client/$1"
    }
  }
}
